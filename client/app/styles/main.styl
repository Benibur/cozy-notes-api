@import 'nib'

body
  background: #91A2C0
  font: bold 18px "Helvetica Neue", Arial, Helvetica, sans-serif


a, a:visited
  color: #F95A5A
  text-decoration: none

a:hover
  color: #665248

body
  font-size: 16px
  color: #444
  background: #fff
  font-family: "KievitPro", "ff-kievit-web-pro-1","ff-kievit-web-pro-2", "Helvetica Neue", Arial, Helvetica, sans-serif

/* Headings */
h1, h2, h3, h4, h5
  font-weight: normal
  color: #222
  clear: left

h1
  font-size: 5em
  line-height: 1.4
  margin-bottom: 0.5em

h2
  font-size: 2em
  line-height: 1
  margin-bottom: 0.5em

/* Text elements */
p
  margin: 0 0 1.5em

a:focus, a:hover
  color: #F95A5A
  text-decoration: underline
a
  color: #F95A5A
  text-decoration: none

/* Lists */
ul, ol
  margin: 0 1.5em 1.5em 0
  list-style-type: none

html, body 
  height 100%

.spacer
  clear both

#home-view
  height 100%

#content
  height 100%
  padding 0

#toolbar
  background #E9EAE5

#nav
  float left
  height 100%
  width 20%
  min-width 200px
  margin 0
  background-color #E9EAE5

#tree
  padding 10px

#tree a
  font-weight normal
  text-transform lowercase
  padding 7px
  border 1px solid transparent

#editor
  width auto
  height 100%
  padding 0
  margin 0 
  background-color #ADA

