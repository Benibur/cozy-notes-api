
// Notes 

#editor
    margin 0 
    margin-left 320px
    padding 10px
    height auto
    background-color bgcoloreditor
    
#note-area
    padding 20px
    
#note-full-breadcrumb
    margin-left 10px
    color #006ED8

#note-full-breadcrumb a
    color #49A1F6

.note-full
    background #333333
    shadow 5px 5px 5px bgshadowcolor 
    border-radius 3px
    height 100%

.note-full h2
    color #B5B5B5
    padding 0
    margin-bottom 20px
    margin-left 20px

#note-full-content
    width 98%
    
#note-full-content-with-video
    display inline-block
    margin 10px
    width 48%
    
#note-full-content-with-video:hover
    border 1px solid blue
